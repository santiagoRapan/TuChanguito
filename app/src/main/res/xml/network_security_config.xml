<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext for Genymotion host loopback (10.0.3.2) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">10.0.3.2</domain>
    </domain-config>

    <!-- Allow cleartext only for the Android Emulator host (10.0.2.2) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">10.0.2.2</domain>
    </domain-config>

    <!-- Allow cleartext for localhost so devices using adb reverse can access the host. -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">localhost</domain>
    </domain-config>

    <!-- Do NOT allow cleartext globally in production. -->
</network-security-config>
