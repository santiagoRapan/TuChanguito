<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext only for the emulator loopback host (10.0.2.2). -->
    <!-- IMPORTANT: 10.0.2.2 is the host loopback only for the Android emulator. -->
    <!-- For a physical device use your machine LAN IP (e.g. 192.168.x.x) or use adb reverse/port-forwarding. -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">10.0.2.2</domain>
    </domain-config>

    <!-- Allow cleartext for localhost so devices using adb reverse can access the host. -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">localhost</domain>
    </domain-config>

    <!-- Do NOT allow cleartext globally in production. -->
</network-security-config>
